@using WebApplication8.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pahurehure Liquor Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark bg-master ftco-navbar-light" id="ftco-navbar">
            <div class="container">
                <a class="navbar-brand" asp-action="index" asp-controller="Home">Pahurehure Liquor <span>store</span></a>
                <div class="order-lg-last btn-group">
                    <a asp-controller="ShoppingCart" asp-action="Index" class="btn-cart dropdown-toggle dropdown-toggle-split">
                        <span class="flaticon-shopping-bag"></span>
                        <div class="d-flex justify-content-center align-items-center"><small>@ShoppingCart.GetShoppingCartCount()</small></div>
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="oi oi-menu"></span> Menu
                </button>
                <div class="collapse navbar-collapse" id="ftco-nav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active"><a asp-action="index" asp-controller="Home" class="nav-link"><i class="bi bi-house"></i> Home</a></li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">
                                <i class="bi bi-shop-window"></i> Products
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Admin Tools
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Report" asp-action="Index"><i class="bi bi-card-checklist"></i> Orders Report</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Create"><i class="bi bi-file-earmark-plus"></i> Add Product</a>
                                </div>
                            </li>
                        }
                        else
                        {
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="bi bi-tags"></i> Categories
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="Products" asp-action="Spirit"><i class=""></i> Spirit</a>
                            <a class="dropdown-item" asp-controller="Products" asp-action="Beer"><i class=""></i> Beer</a>
                            <a class="dropdown-item" asp-controller="Products" asp-action="Port"><i class=""></i> Port</a>
                            <a class="dropdown-item" asp-controller="Products" asp-action="Wine"><i class=""></i> Wine</a>
                            <a class="dropdown-item" asp-controller="Products" asp-action="Premix"><i class=""></i> Premix</a>
                        </div>
                    </li>
                        }

                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="ContactUs" asp-action="Index"><i class="bi bi-chat-text"></i> ContactUs</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Aboutus" asp-action="Index"><i class="bi bi-geo-alt"></i> AboutUs</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid pl-6">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @{await Html.RenderPartialAsync("_FooterPartial");}
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @{await Html.RenderPartialAsync("_MainScriptsPartial");}
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
